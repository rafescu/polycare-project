@model IEnumerable<PolyCare.Models.Medicos>

@{
    ViewBag.Title = "Index";
}

<h2>Médicos</h2>

<p>
    @Html.ActionLink("Criar novo médico", "RegisterMedico")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Especialidade.Designacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntradaClinica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumCedulaProf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInscOrdem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Faculdade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidade.Designacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEntradaClinica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumCedulaProf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInscOrdem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculdade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MedicoID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.MedicoID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.MedicoID })
        </td>
    </tr>
}

</table>
