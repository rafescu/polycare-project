@model IEnumerable<PolyCare.Models.Marcacoes>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Consultas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Especialidade.Designacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medico.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataMarcacoes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidade.Designacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medico.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataMarcacoes)
        </td>
        <td>
            
            @Html.ActionLink("Editar", "Edit", new { id = item.MarcacaoID }) |
	        @Html.ActionLink("Detalhes", "Details", new { id = item.MarcacaoID }) |
            @Html.ActionLink("Cancelar", "Delete", new { id = item.MarcacaoID })
	       
            
        </td>
    </tr>
}

</table>
