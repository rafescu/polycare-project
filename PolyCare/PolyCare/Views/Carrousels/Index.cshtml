@model IEnumerable<PolyCare.Models.Carrousel>

@{
    ViewBag.Title = "Index";
}

<h2>Imagens na Página Inicial</h2>

@if (Model.Count() == 0) {
    <p>Sem imagens.</p>
}
    
@foreach (var item in Model) {
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-11" style="text-align:center;">
                    <h4>@item.Title</h4>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-9">
                                    <img src="~/Content/Images/Carrousel/@(item.ImgSource)"  width="700" height="350"/>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        Inserido: @item.TimeStamp
                                    </div>
                                    <div class="row">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "label label-warning" })
                                    </div>
                                    <div class="row">
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @class = "label label-danger" })                                  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
  
